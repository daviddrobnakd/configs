{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-empty": ["error", { "allowEmptyCatch": true }],
        "no-multiple-empty-lines": ["error", { "max": 3, "maxEOF": 0 }]
    },
    "globals": {
        "Alpine": true
    }
}

